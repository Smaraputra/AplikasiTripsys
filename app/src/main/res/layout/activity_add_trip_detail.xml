<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="25dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="25dp"
    android:layout_marginBottom="15dp"
    android:orientation="vertical"
    tools:context=".activity.tripdetail.AddNewTripDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                card_view:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp">

                    <Button
                        android:id="@+id/tombolbatalbatal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:backgroundTint="#FFFFFF"
                        android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        android:padding="15dp"
                        app:cornerRadius="0dp" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:foregroundGravity="center"
                        android:gravity="center"
                        android:paddingLeft="3dp"
                        android:text="Add Trip Details"
                        android:textColor="@color/hijau_soft"
                        android:textSize="24sp"
                        android:textStyle="bold" />
                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                android:text="Date"
                android:textColor="@color/hijau_soft"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editTextDate3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
                android:ems="10"
                android:hint="Date Within Your Trip Duration"
                android:inputType="date"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                android:text="Activity"
                android:textColor="@color/hijau_soft"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputnama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Activity during the Date"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                android:text="Location"
                android:textColor="@color/hijau_soft"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputnama2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Location of Your Trip"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView21"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:paddingLeft="3dp"
                android:text="Note"
                android:textColor="@color/hijau_soft"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/inputnama3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Some Note"
                android:inputType="textPersonName"
                android:textSize="20sp" />

            <RadioGroup
                android:id="@+id/ver_ed_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/tombolkirimkirim"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="@color/hijau_soft"
                    android:drawableRight="@drawable/ic_baseline_arrow_forward_24"
                    android:drawableTint="#FFFFFF"
                    android:padding="15dp"
                    android:text="Save"
                    android:textStyle="bold"
                    app:cornerRadius="10dp"
                    app:iconPadding="0dp" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>